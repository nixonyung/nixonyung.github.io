# Doc: https://editorconfig.org
# VS Code: install editorconfig plugin

root = true

[*]
indent_size = 2
[*.{c,h,go,py,js,ts,php,fish,sh,lua}] # programming languages
indent_size = 4
[.*.{js,ts}] # config files
indent_size = 2
[*config.{js,ts}] # config files
indent_size = 2

# prefer keeping these unchanged
[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
[makefile]
indent_style = tab
